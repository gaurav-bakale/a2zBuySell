<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="900.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.a2zbuysell.a2zbuysell.homePage">
    <!-- Footer HBox with buttons -->
    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20; -fx-background-color: #f4f4f4;">
            <fx:include source="footer-part.fxml"/>
        </HBox>
    </bottom>
    <!-- Title bar HBox with -->
    <top>
        <HBox fx:id="homePageTitleBarHbox" alignment="CENTER">
        <fx:include source="title-bar.fxml" />
        </HBox>
    </top>
    <left>
        <VBox fx:id="leftNavbar" alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label fx:id="categoriesLabel" text="Categories" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
            <ComboBox fx:id="categoriesDropdown" onAction="#categoryFilterClick" prefWidth="150.0" promptText="Select"
                      style="-fx-background-color: linear-gradient(to bottom, #f0f0f0, #dfe6e9); -fx-text-fill: #2d3436; -fx-font-size: 14px; -fx-background-radius: 8px; -fx-padding: 5px 10px;">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </ComboBox>

            <Label fx:id="subcategoriesLabel" text="Subcategories" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
            <ComboBox fx:id="subcategoriesDropDown" onAction="#subcategoryFilterClick" prefWidth="150.0" promptText="Select"
                      style="-fx-background-color: linear-gradient(to bottom, #f0f0f0, #dfe6e9); -fx-text-fill: #2d3436; -fx-font-size: 14px; -fx-background-radius: 8px; -fx-padding: 5px 10px;">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </ComboBox>
            <Button fx:id="clearFiltersButton" mnemonicParsing="false" onAction="#clearFilters" text="Clear filters"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 12px; -fx-padding: 10px 20px;" />
            <Button fx:id="sellProduct" mnemonicParsing="false" onAction="#sellProduct" text="Sell Product" textFill="#0000009d"
                    style="-fx-background-color: #808080; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 12px; -fx-padding: 10px 20px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 5, 0, 2, 2);" >
                <VBox.margin>
                    <Insets top="70.0" />
                </VBox.margin>
                <font>
                    <Font name="Chalkboard Bold" size="13.0" />
                </font>
            </Button>
        </VBox>
    </left>
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER">
            <VBox fx:id="productsDetailsVbox" alignment="CENTER" fillWidth="true" spacing="10">
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
